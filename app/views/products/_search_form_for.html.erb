<%= search_form_for @q do |f| %>
  <div class="row">
    <%= f.label :Name, class:"col-md-1 col-md-offset-3" %>
    <%= f.search_field :name_cont, class:"col-md-3 col-md-offset-1",placeholder: "Tìm kiếm tên sản phẩm..." %>
  </div>
  <br>
  <div class="row">
    <%= f.label :Category, class:"col-md-1 col-md-offset-3" %>
    <%= f.select :category_cont, options_for_select(["Son", "Cham soc da", "tri mun"]), {}, {class: "col-md-3 col-md-offset-1"} %>
  </div>
  <br>
  <%= f.submit class:"btn btn-default col-md-offset-3" %>
<% end %>
