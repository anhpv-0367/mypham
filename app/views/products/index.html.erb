<% provide(:title, 'All products') %>
<div id="main_container">
  <%= render "layouts/header" %>
  <div id="main_content">
    <%= render "layouts/left_content" %>
    <div class="center_content">
      <h1>All products</h1>
      <div><%= link_to "create new products", new_product_path, class: "btn btn-primary" %></div>
      <br>
      <%= will_paginate %>
      <table class="table">
        <tr>
          <th>STT</th>
          <th>Product Name</th>
          <th>category</th>
          <th>Price</th>
          <th>Avatar</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
          <% @products.each_with_index do |product, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to product.name, product %></td>
              <td><%= product.category %></td>
              <td><%= product.price %></td>
              <td><%= image_tag(product.avatar_url, size: "60x60") if product.avatar? %></td>
              <td><%= link_to "Edit", edit_product_path(product) %></td>
              <td><%= link_to "Delete", product_path(product), method: :delete %></td>
            </tr>
          <% end %>
      </table>
      <%= will_paginate %>
    </div>
  </div>
  <%= render "layouts/footer" %>
</div>
