<% provide(:title, 'All products') %>
<h1>All products</h1>
<div class= "row col-md-offset-10"><%= link_to "create new products", new_product_path, class: "btn btn-primary" %></div>
<br>
<%= will_paginate %>
<table class="table">
  <tr>
    <th>STT</th>
    <th>Product Name</th>
    <th>category</th>
    <th>Price</th>
    <th>action</th>
  </tr>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to product.name, product %></td>
        <td><%= product.category %></td>
        <td><%= product.price %></td>
        <td><%= link_to "Edit", edit_product_path(product) %></td>
      </tr>
    <% end %>
</table>

<%= will_paginate %>
